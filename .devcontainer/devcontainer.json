{
  "name": "Clarity Development Environment",
  "image": "mcr.microsoft.com/devcontainers/typescript-node:1-20-bullseye",

  "features": {
    "ghcr.io/devcontainers/features/docker-in-docker:2": {}
  },

  "customizations": {
    "vscode": {
      "extensions": ["hirosystems.clarity-lsp"],
      "settings": {
        "terminal.integrated.defaultProfile.linux": "bash"
      }
    }
  },

  "postCreateCommand": "curl -sS -o- https://raw.githubusercontent.com/hirosystems/clarinet/main/install.sh | sh",

  "remoteUser": "node"
}
